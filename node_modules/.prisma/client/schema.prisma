// Configuraci√≥n Prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// MODELO: USUARIOS
// ============================================
model Usuario {
  id         String    @id @default(uuid())
  email      String    @unique
  password   String
  nombre     String
  telefono   String?
  rut        String?
  plan       String    @default("trial")
  trialHasta DateTime?
  estado     String    @default("activo")
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  negocio Negocio?

  @@map("usuarios")
}

// ============================================
// MODELO: NEGOCIOS
// ============================================
model Negocio {
  id                   String   @id @default(uuid())
  usuarioId            String   @unique
  nombreNegocio        String
  rutNegocio           String?
  tipo                 String
  direccion            String?
  comuna               String?
  region               String?
  ventasMensualesAprox String?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  usuario       Usuario       @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  transacciones Transaccion[]

  @@map("negocios")
}

// ============================================
// MODELO: TRANSACCIONES
// ============================================
model Transaccion {
  id          String   @id @default(uuid())
  negocioId   String
  tipo        String
  fecha       DateTime
  montoTotal  Int
  montoNeto   Int
  montoIva    Int
  exento      Boolean  @default(false)
  descripcion String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  negocio Negocio @relation(fields: [negocioId], references: [id], onDelete: Cascade)

  @@map("transacciones")
}
